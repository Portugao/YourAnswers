{# Purpose of this template: Display questions within an external context #}
<dl>
    {% for question in items %}
        <dt>{{ question|muyouranswersmodule_formattedTitle }}</dt>
        {% if question.textOfQuestion %}
            <dd>{{ question.textOfQuestion|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
        <dd><a href="{{ path('muyouranswersmodule_question_display', {'id': question.getId()}) }}" title="{{ __('Read more')|e('html_attr') }}">{{ __('Read more') }}</a>
        </dd>
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>
