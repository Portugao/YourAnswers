{# purpose of this template: show amount of pending items to moderators #}
{% if not app.request.query.getBoolean('raw', false) %}
    {% set moderationObjects = muyouranswersmodule_moderationObjects() %}
    {% if moderationObjects|length > 0 %}
        {% for modItem in moderationObjects %}
            <p class="alert alert-info alert-dismissable text-center">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {% set itemObjectType = modItem.objectType|lower %}
                {% if itemObjectType in ['answer', 'question'] %}
                    <a href="{{ path('muyouranswersmodule_' ~ itemObjectType ~ '_adminview', {workflowState: modItem.state}) }}" class="bold alert-link">{{ modItem.message }}</a>
                {% else %}
                    <a href="{{ path('muyouranswersmodule_' ~ itemObjectType ~ '_adminindex', {workflowState: modItem.state}) }}" class="bold alert-link">{{ modItem.message }}</a>
                {% endif %}
            </p>
        {% endfor %}
    {% endif %}
{% endif %}
